{
  "configurations": {
    "run - debugpy": {
      "adapter": "debugpy",
      "configuration": {
        "request": "launch",
        "type": "python",
        "cwd": "${workspaceRoot}",
        "python": "$HOME/miniconda3/envs/i2dl/bin/python",
        "program": "${file}",
        "stopOnEntry": true,
        "console": "externalTerminal"
      },
      "breakpoints": {
        "exception": {
          "raised": "N",
          "uncaught": ""
        }
      }
    }
  }
}
